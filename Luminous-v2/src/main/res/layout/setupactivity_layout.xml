<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/setupactivity_welcome"
        android:layout_gravity="center_horizontal"
        android:textSize="35sp"
        android:textColor="#787878"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/setupactivity_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textColor="#787878" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="350dp"
        android:layout_marginTop="60dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setupactivity_host"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:hint="Hostname or IP"
            android:singleLine="true"
            android:layout_marginLeft="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setupactivity_port"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:singleLine="true"
            android:layout_marginRight="40dp"
            android:hint="Port"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setupactivity_button"
        android:id="@+id/setupactivity_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:onClick="onButtonClick"
        android:width="250dp" />

</LinearLayout>